---
import { siteConfig } from "../config";
---

<section id="trabajos" class="bg-black py-24 lg:py-32">
  <div class="container mx-auto px-8">
    
    <!-- Section header -->
    <div class="text-center mb-20">
      <p class="text-white/40 text-sm tracking-[0.3em] uppercase mb-4">Portfolio</p>
      <h2 class="text-4xl lg:text-6xl font-bold text-white tracking-tight">
        TRABAJOS
      </h2>
    </div>

    <!-- Cortometrajes -->
    <div class="mb-32">
      <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-4">
        <span class="w-12 h-px bg-white/20"></span>
        CORTOMETRAJES
      </h3>
      
      {siteConfig.trabajos.cortometrajes.map((corto) => (
        <div class="relative group">
          <div class="aspect-video bg-neutral-900 rounded-lg overflow-hidden mb-6">
            <iframe
              src={corto.videoUrl}
              class="w-full h-full"
              allow="autoplay; encrypted-media"
              allowfullscreen
              loading="lazy"
            ></iframe>
          </div>
          <div class="max-w-3xl">
            <h4 class="text-2xl font-bold text-white mb-2">{corto.nombre}</h4>
            <p class="text-white/40 text-sm uppercase tracking-wider mb-4">Rol: {corto.rol}</p>
            <p class="text-white/60 leading-relaxed">{corto.descripcion}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Fotografías — Galería por categoría -->
    <div class="mb-32">
      <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-4">
        <span class="w-12 h-px bg-white/20"></span>
        FOTOGRAFÍAS
      </h3>

      <!-- Modelo (4 fotos — portrait 2:3) -->
      <div class="mb-12">
        <p class="text-white/40 text-sm tracking-[0.2em] uppercase mb-4">Modelo</p>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
          <div class="group relative overflow-hidden rounded-lg">
            <img src="/fotos/modelo-1.webp" alt="Sesión modelo 1" class="w-full h-auto grayscale group-hover:grayscale-0 transition-all duration-700 group-hover:scale-105" loading="lazy" />
          </div>
          <div class="group relative overflow-hidden rounded-lg">
            <img src="/fotos/modelo-2.webp" alt="Sesión modelo 2" class="w-full h-auto grayscale group-hover:grayscale-0 transition-all duration-700 group-hover:scale-105" loading="lazy" />
          </div>
          <div class="group relative overflow-hidden rounded-lg">
            <img src="/fotos/modelo-3.webp" alt="Sesión modelo 3" class="w-full h-auto grayscale group-hover:grayscale-0 transition-all duration-700 group-hover:scale-105" loading="lazy" />
          </div>
          <div class="group relative overflow-hidden rounded-lg">
            <img src="/fotos/modelo-4.webp" alt="Sesión modelo 4" class="w-full h-auto grayscale group-hover:grayscale-0 transition-all duration-700 group-hover:scale-105" loading="lazy" />
          </div>
        </div>
      </div>

      <!-- Eventos (2 fotos — portrait 2:3) -->
      <div class="mb-12">
        <p class="text-white/40 text-sm tracking-[0.2em] uppercase mb-4">Eventos</p>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
          <div class="group relative overflow-hidden rounded-lg">
            <img src="/fotos/eventos-1.webp" alt="Evento 1" class="w-full h-auto grayscale group-hover:grayscale-0 transition-all duration-700 group-hover:scale-105" loading="lazy" />
          </div>
          <div class="group relative overflow-hidden rounded-lg">
            <img src="/fotos/eventos-2.webp" alt="Evento 2" class="w-full h-auto grayscale group-hover:grayscale-0 transition-all duration-700 group-hover:scale-105" loading="lazy" />
          </div>
        </div>
      </div>

      <!-- Taller (2 fotos — landscape 3:2) -->
      <div>
        <p class="text-white/40 text-sm tracking-[0.2em] uppercase mb-4">Taller</p>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-2">
          <div class="group relative overflow-hidden rounded-lg">
            <img src="/fotos/taller-1.webp" alt="Taller 1" class="w-full h-auto grayscale group-hover:grayscale-0 transition-all duration-700 group-hover:scale-105" loading="lazy" />
          </div>
          <div class="group relative overflow-hidden rounded-lg">
            <img src="/fotos/taller-2.webp" alt="Taller 2" class="w-full h-auto grayscale group-hover:grayscale-0 transition-all duration-700 group-hover:scale-105" loading="lazy" />
          </div>
        </div>
      </div>
    </div>

    <!-- Reels / Edición — Drive embeds -->
    <div class="mb-32">
      <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-4">
        <span class="w-12 h-px bg-white/20"></span>
        REELS — GRABACIÓN Y EDICIÓN
      </h3>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Flash - Monomics -->
        <div>
          <div class="aspect-[9/16] max-w-sm mx-auto md:mx-0 bg-neutral-900 rounded-lg overflow-hidden">
            <iframe
              src="https://drive.google.com/file/d/16MPw0oY6wFfsYzgIZ9x1-tKSVNdM2TYH/preview"
              class="w-full h-full"
              allow="autoplay"
              allowfullscreen
              loading="lazy"
            ></iframe>
          </div>
          <p class="text-white font-medium mt-3">Flash — Monomics</p>
          <p class="text-white/40 text-sm">Grabación y edición</p>
        </div>

        <!-- Bámbola Vestidos -->
        <div>
          <div class="aspect-[9/16] max-w-sm mx-auto md:mx-0 bg-neutral-900 rounded-lg overflow-hidden">
            <iframe
              src="https://drive.google.com/file/d/1eA8FU7M1jEk-bK6VGrKJWIhQ92aeHyUA/preview"
              class="w-full h-full"
              allow="autoplay"
              allowfullscreen
              loading="lazy"
            ></iframe>
          </div>
          <p class="text-white font-medium mt-3">Bámbola Vestidos</p>
          <p class="text-white/40 text-sm">Grabación y edición</p>
        </div>
      </div>
    </div>

    <!-- Videojuegos -->
    <div>
      <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-4">
        <span class="w-12 h-px bg-white/20"></span>
        VIDEOJUEGOS
      </h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {siteConfig.trabajos.videojuegos.map((game) => (
          <a 
            href={game.url} 
            target="_blank" 
            rel="noopener noreferrer"
            class="group block bg-neutral-900 rounded-lg overflow-hidden hover:bg-neutral-800 transition-colors"
          >
            <div class="aspect-video bg-neutral-800 relative overflow-hidden">
              {game.imagen ? (
                <img
                  src={game.imagen}
                  alt={game.nombre}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              ) : (
                <div class="w-full h-full flex items-center justify-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-white/30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                </div>
              )}
            </div>
            <div class="p-6">
              <h4 class="text-xl font-bold text-white mb-2 group-hover:text-white/80 transition-colors">
                {game.nombre}
              </h4>
              <p class="text-white/40 text-sm uppercase tracking-wider mb-3">
                {game.rol}
              </p>
              <p class="text-white/60 text-sm flex items-center gap-2">
                <span>Jugar en itch.io</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>

  </div>
</section>
