---
import { siteConfig } from "../config";
---

<section id="trabajos" class="bg-black py-24 lg:py-32">
  <div class="container mx-auto px-8">
    
    <!-- Section header -->
    <div class="text-center mb-20">
      <p class="text-white/40 text-sm tracking-[0.3em] uppercase mb-4">Portfolio</p>
      <h2 class="text-4xl lg:text-6xl font-bold text-white tracking-tight">
        TRABAJOS
      </h2>
    </div>

    <!-- Cortometrajes -->
    <div class="mb-32">
      <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-4">
        <span class="w-12 h-px bg-white/20"></span>
        CORTOMETRAJES
      </h3>
      
      {siteConfig.trabajos.cortometrajes.map((corto) => (
        <div class="relative group">
          <div class="aspect-video bg-neutral-900 rounded-lg overflow-hidden mb-6">
            <iframe
              src={corto.videoUrl}
              class="w-full h-full"
              allow="autoplay; encrypted-media"
              allowfullscreen
              loading="lazy"
            ></iframe>
          </div>
          <div class="max-w-3xl">
            <h4 class="text-2xl font-bold text-white mb-2">{corto.nombre}</h4>
            <p class="text-white/40 text-sm uppercase tracking-wider mb-4">Rol: {corto.rol}</p>
            <p class="text-white/60 leading-relaxed">{corto.descripcion}</p>
          </div>
        </div>
      ))}
    </div>

    <!-- Fotografías -->
    <div class="mb-32">
      <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-4">
        <span class="w-12 h-px bg-white/20"></span>
        FOTOGRAFÍAS
      </h3>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
        <!-- Placeholder images - will be replaced with actual photos from Drive -->
        <div class="aspect-square bg-neutral-900 rounded overflow-hidden group cursor-pointer">
          <div class="w-full h-full flex items-center justify-center text-white/20">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
          </div>
        </div>
        <div class="aspect-square bg-neutral-900 rounded overflow-hidden"></div>
        <div class="aspect-square bg-neutral-900 rounded overflow-hidden"></div>
        <div class="aspect-square bg-neutral-900 rounded overflow-hidden"></div>
      </div>
      
      <p class="text-white/40 text-sm mt-6 text-center">
        <a 
          href="https://drive.google.com/drive/folders/1sZM7TxoHxywMIW3V6-PIzynwzXAwPIWv" 
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-white transition-colors underline underline-offset-4"
        >
          Ver galería completa →
        </a>
      </p>
    </div>

    <!-- Edición -->
    <div class="mb-32">
      <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-4">
        <span class="w-12 h-px bg-white/20"></span>
        EDICIÓN
      </h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="aspect-video bg-neutral-900 rounded-lg overflow-hidden flex items-center justify-center text-white/20">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z" />
          </svg>
        </div>
      </div>
      
      <p class="text-white/40 text-sm mt-6 text-center">
        <a 
          href="https://drive.google.com/drive/folders/1yjXMdkq-0ugpr00FQMCbZt8kXNX6ovCJ" 
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-white transition-colors underline underline-offset-4"
        >
          Ver trabajos de edición →
        </a>
      </p>
    </div>

    <!-- Videojuegos -->
    <div>
      <h3 class="text-2xl font-bold text-white mb-8 flex items-center gap-4">
        <span class="w-12 h-px bg-white/20"></span>
        VIDEOJUEGOS
      </h3>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {siteConfig.trabajos.videojuegos.map((game) => (
          <a 
            href={game.url} 
            target="_blank" 
            rel="noopener noreferrer"
            class="group block bg-neutral-900 rounded-lg overflow-hidden hover:bg-neutral-800 transition-colors"
          >
            <div class="aspect-video bg-neutral-800 flex items-center justify-center">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-white/20 group-hover:text-white/40 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div class="p-6">
              <h4 class="text-xl font-bold text-white mb-2 group-hover:text-white/80 transition-colors">
                {game.nombre}
              </h4>
              <p class="text-white/40 text-sm uppercase tracking-wider mb-3">
                {game.rol}
              </p>
              <p class="text-white/60 text-sm flex items-center gap-2">
                <span>Jugar en itch.io</span>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                </svg>
              </p>
            </div>
          </a>
        ))}
      </div>
    </div>

  </div>
</section>
